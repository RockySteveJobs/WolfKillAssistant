<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp"/>
        </shape>
    </item>



    <!-- Background -->
    <item>
        <shape>
            <!--设置边距-->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <!--控制边界线颜色和大小-->
            <stroke
                android:width="1dp"
                android:color="#BBBBBB" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>